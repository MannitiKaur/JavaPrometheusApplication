package com.app.prommonitor.util;

import org.springframework.util.StringUtils;


public class MetricUtil {
    public String BOOKS_SERVICE_PREFIX = "books_service";
    public String BOOKS = "_books";
    public String API_BOOKS = BOOKS_SERVICE_PREFIX + "_api" + BOOKS;
    public String METRIC_API_BOOKS_GET_COUNT = API_BOOKS + "_get_count";
    public String METRIC_BOOKS_IN_STORE_COUNT = BOOKS_SERVICE_PREFIX + BOOKS + "_in_store_count";
    public String METRIC_BOOKS_BY_TITLE_SEARCH = BOOKS_SERVICE_PREFIX + BOOKS + "_search_by_title";
    public String TAG_TITLE = "title";
    public String TAG_MATCHING_BOOKS = "matching_books";

    static String getTagTitle(String title) {
        return StringUtils.isEmpty(title) ? "all" : title;
    }
}